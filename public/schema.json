{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "PurrfectHub",
  "url": "https://purrfecthub.com",
  "description": "Bangladesh's first digital cat adoption platform",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://purrfecthub.com/cats?search={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "publisher": {
    "@type": "Organization",
    "name": "PurrfectHub",
    "logo": {
      "@type": "ImageObject",
      "url": "https://purrfecthub.com/images/logo.png"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "Customer Service",
      "availableLanguage": ["en", "bn"]
    }
  },
  "inLanguage": ["en", "bn"],
  "about": {
    "@type": "Thing",
    "name": "Cat Adoption",
    "description": "Platform for adopting cats from verified shelters in Bangladesh"
  }
}
